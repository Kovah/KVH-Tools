<h2 class="text-2xl"><%= t :tool_overview %></h2>

<h3 class="text-xl mt-5"><%= t :string_tools %></h3>

<ul class="lg:flex">
  <li class="lg:w-1/2 lg:mr-5 md:flex md:items-center p-3 mt-5 border border-gray-900 rounded-lg">
    <div class="mr-3">
      <%= link_to (t :tool1), new_tool_string_length_path, {class: "hover:text-white mr-3"} %>
      <p class="text-gray-600 text-sm"><%= t :tool1_description %></p>
    </div>
    <div class="md:w-1/4 mt-3 md:mt-0 md:ml-auto text-center">
      <%= render "component/btn", text: (t :use_tool), link: new_tool_string_length_path %>
    </div>
  </li>
  <li class="lg:w-1/2 md:flex md:items-center p-3 mt-5 border border-gray-900 rounded-lg">
    <div class="mr-3">
      <%= link_to (t :tool2), new_tool_string_trim_path, {class: "hover:text-white mr-3"} %>
      <p class="text-gray-600 text-sm"><%= t :tool2_description %></p>
    </div>
    <div class="md:w-1/4 mt-3 md:mt-0 md:ml-auto text-center">
      <%= render "component/btn", text: (t :use_tool), link: new_tool_string_trim_path %>
    </div>
  </li>
</ul>
