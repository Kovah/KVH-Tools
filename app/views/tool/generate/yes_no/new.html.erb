<h2 class="text-2xl"><%= t('generate.yes_no.title') %></h2>

<p class="text-gray-500"><%= t('generate.yes_no.description') %></p>

<div class="mt-6">
  <%= form_for :yes_no, method: 'POST' do %>
    <%= render 'component/submit', text: (t :use_tool) %>
  <% end %>
</div>

<% if defined?(@output) %>
  <div class="mt-6">
    <%= t('generate.yes_no.answer') %>: <b><%= @output ? t('generate.yes_no.yes') : t('generate.yes_no.no') %></b>
  </div>
<% end %>
